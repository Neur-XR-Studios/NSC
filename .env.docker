# Server
NODE_ENV=production
PORT=5000

# Database
DB_HOST=mysql
DB_USER=nsc
DB_PASS=nscpass
DB_NAME=nsc
MYSQL_ROOT_PASSWORD=rootpass

# JWT
JWT_SECRET=change-me-please
JWT_ACCESS_EXPIRATION_MINUTES=5
JWT_REFRESH_EXPIRATION_DAYS=30

# Logs
LOG_FOLDER=logs/
LOG_FILE=%DATE%-app-log.log
LOG_LEVEL=info

# MQTT
# Backend uses TCP to the broker container
MQTT_URL=mqtt://mqtt-broker:1883
MQTT_CLIENT_ID_PREFIX=nsc-backend
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_KEEPALIVE=60
MQTT_RECONNECT_MS=2000
MQTT_PROTOCOL_VERSION=5
MQTT_CLEAN=true
MQTT_WS_PATH=

# Frontend build-time defaults for local dev access in browser
VITE_API_BASE_URL=http://localhost:8001
VITE_MQTT_WS_URL=ws://localhost:9001
