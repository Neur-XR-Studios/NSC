# Server
NODE_ENV=production
PORT=5000

# Database
DB_HOST=mysql
DB_USER=nsc
DB_PASS=nscpass
DB_NAME=nsc
MYSQL_ROOT_PASSWORD=rootpass

# JWT
JWT_SECRET=change-me-please
JWT_ACCESS_EXPIRATION_MINUTES=120  # 2 hours - allows time for file uploads
JWT_REFRESH_EXPIRATION_DAYS=30

# Logs
LOG_FOLDER=logs/
LOG_FILE=%DATE%-app-log.log
LOG_LEVEL=info

# MQTT
# Backend uses TCP to the broker container
MQTT_URL=mqtt://mqtt-broker:1883
MQTT_CLIENT_ID_PREFIX=nsc-backend
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_KEEPALIVE=60
MQTT_RECONNECT_MS=2000
MQTT_PROTOCOL_VERSION=5
MQTT_CLEAN=true
MQTT_WS_PATH=

# Network Configuration
# HOST_IP: Used for Docker port binding. Use 0.0.0.0 to bind to all interfaces.
# PUBLIC_HOST: The actual IP/hostname used for URLs (e.g., 192.168.0.106 for LAN access)
HOST_IP=0.0.0.0
PUBLIC_HOST=192.168.0.239

# Ports
BACKEND_PORT=8001
FRONTEND_PORT=8002

# CORS Configuration
# Leave empty to allow all origins (for LAN access)
# Or specify allowed origins: http://192.168.1.100:8002,http://localhost:8002
CORS_ORIGIN=

# Frontend build-time URLs
# For localhost: use localhost
# For LAN: use your machine's IP (e.g., http://192.168.1.100:8001)