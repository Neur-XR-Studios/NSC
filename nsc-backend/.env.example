#Server environment
NODE_ENV=development
#Port number
PORT=8000

#Db configuration
DB_HOST=127.0.0.1
DB_USER=root
DB_PASS=Dk4156270
DB_NAME=nsc-dbms


# JWT secret key
JWT_SECRET=your-jwt-secret-key
# Number of minutes after which an access token expires
JWT_ACCESS_EXPIRATION_MINUTES=500
# Number of days after which a refresh token expires
JWT_REFRESH_EXPIRATION_DAYS=30

#Log config
LOG_FOLDER=logs/
LOG_FILE=%DATE%-app-log.log
LOG_LEVEL=error

#Redis
REDIS_HOST=redis-host-local
REDIS_PORT=1234
REDIS_USE_PASSWORD=no
REDIS_PASSWORD=your-password

# MQTT (broker can be LAN-local; supports mqtt[s]:// or ws[s]://)
# Example for LAN TCP: mqtt://192.168.0.10:1883
# Example for WebSocket: ws://192.168.0.10:9001
MQTT_URL=mqtt://broker.hivemq.com:1883
MQTT_CLIENT_ID_PREFIX=nsc-backend
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_KEEPALIVE=60
MQTT_RECONNECT_MS=2000
# 4=v3.1.1, 5=v5.0
MQTT_PROTOCOL_VERSION=5
MQTT_CLEAN=true
# If using WebSocket path, e.g. /mqtt; leave empty otherwise
MQTT_WS_PATH=

CORS_ORIGIN="*"